<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineCampusApp"
        tools:targetApi="31">

        <!-- Set the login activity as the launcher -->
        <activity
            android:name=".login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".signup"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Activities for Course Modules -->
        <activity
            android:name=".CourseDataStructures"
            android:exported="true" />

        <activity
            android:name=".CourseMobilDevelopment"
            android:exported="true" />

        <activity
            android:name=".CourseWebDevelopment"
            android:exported="true" />
    </application>

</manifest>
